{
    "name": "@theunwalked/unplayable",
    "version": "0.0.22-dev.0",
    "description": "A cross-platform audio recording and processing library",
    "type": "module",
    "main": "./dist/unplayable.cjs",
    "module": "./dist/unplayable.js",
    "types": "./dist/unplayable.d.ts",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tobrien/unplayable.git"
    },
    "exports": {
        ".": {
            "types": "./dist/unplayable.d.ts",
            "import": "./dist/unplayable.js",
            "require": "./dist/unplayable.cjs"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "npm run lint && tsc --noEmit && vite build",
        "start": "dist/main.js",
        "dev": "vite build --watch",
        "watch": "vite build --watch",
        "test": "vitest run --coverage",
        "precommit": "npm run lint && npm run test",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "clean": "rm -rf dist",
        "prepublishOnly": "npm run clean && npm run build",
        "docs:dev": "cd docs && cp ../README.md public/ && npm install && npm run dev",
        "docs:build": "cd docs && cp ../README.md public/ && npm install && npm run build",
        "docs:preview": "cd docs && npm run preview",
        "docs:test": "cd docs && npm install && npm run test",
        "docs:coverage": "cd docs && npm install && npm run coverage"
    },
    "keywords": [
        "audio",
        "recording",
        "microphone",
        "ffmpeg",
        "cross-platform"
    ],
    "author": "Tim O'Brien <tobrien@discursive.com>",
    "license": "Apache-2.0",
    "dependencies": {
        "glob": "^13.0.0",
        "winston": "^3.17.0",
        "zod": "^4.0.2"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.30.1",
        "@rollup/plugin-replace": "^6.0.2",
        "@swc/core": "^1.12.11",
        "@types/node": "^25.0.3",
        "@typescript-eslint/eslint-plugin": "^8.36.0",
        "@typescript-eslint/parser": "^8.36.0",
        "@vitest/coverage-v8": "^4.0.16",
        "eslint": "^9.30.1",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "globals": "^16.3.0",
        "typescript": "^5.8.3",
        "vite": "^7.0.4",
        "vite-plugin-dts": "^4.5.4",
        "vite-plugin-node": "^7.0.0",
        "vite-plugin-node-polyfills": "^0.24.0",
        "vitest": "^4.0.16"
    },
    "overrides": {
        "wrap-ansi": "7.0.0"
    }
}
