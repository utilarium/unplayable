{
    "compilerOptions": {
        "target": "ES2024",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "outDir": "./dist",
        "rootDir": ".",
        "types": [
            "node",
            "vitest"
        ],
        "incremental": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "tests/**/*",
        "*.config.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}